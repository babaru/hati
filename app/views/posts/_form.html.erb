<%= simple_form_for(@post, :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :body, :input_html => { :rows => 10 }%>
    <%= f.input :weibo_id, :as => :hidden %>
    <%= f.input :weibo_url, :as => :hidden %>
    <%= f.input :scheduled_at, :as => :string, :input_html => {:class => 'datetimepicker'} %>
    <%= f.input :is_sent, :as => :hidden %>
    <%= f.input :sent_at, :as => :hidden %>
    <%= f.input :weibo_created_at, :as => :hidden %>
    <%= f.input :image %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %> <input type="reset" value="<%= t("buttons.reset_form")%>" class="btn"> <%= link_to "#{t('labels.back_to')}#{t('model.list', :model => Post.model_name.human)}", posts_path(), :class => 'pull-right' %>
  </div>
<% end %>
